@{
    Layout = "~/Views/Shared/_InstructorLayout.cshtml";
    ViewData["Title"] = "Instructor DashBoard";
}

<div class="sb2-2">
    <!--== breadcrumbs ==-->
    <div class="sb2-2-2">
        <ul>
            <li>
                <a href="index-2.html"><i class="fa fa-home" aria-hidden="true"></i> Home</a>
            </li>
            <li class="active-bre">
                <a href="#"> Add Topic</a>
            </li>
            <li class="page-back">
                <a href="index-2.html"><i class="fa fa-backward" aria-hidden="true"></i> Back</a>
            </li>
        </ul>
    </div>

    <!--== User Details ==-->
    <div class="sb2-2-3">
        <div class="row">
            <div class="col-md-12">
                <div class="box-inn-sp admin-form">
                    <div class="inn-title">
                        <h4>Add  a Topic</h4>
                        <p>Provide the following details to add a new Topic</p>
                    </div>
                    <div class="tab-inn">
                        <form id="createTopicForm">
                            <div class="row">
                                <div class="input-field col s6">
                                    <input type="text" name="title" class="validate" required>
                                    <label class="">Title</label>
                                </div>
                                <div class="input-field col s6">
                                    <input type="text" name="content" class="validate" required>
                                    <label class="">Content</label>
                                </div>
                            </div>
                            <div class="row">
                                <div class="input-field col s12">
                                    <select name="moduleId">
                                        <option value="" disabled selected>Select Module</option>
                                        <option value="1">Active</option>
                                        <option value="2">De-Active</option>
                                        <option value="3">Delete</option>
                                    </select>
                                    <label class="">Module</label>
                                </div>
                            </div>
                            <div class="row">
                                <div class="input-field col s12">
                                    <i class="waves-effect waves-light btn-large waves-input-wrapper" style=""><input id="createTopicBtn" type="submit" class="waves-button-input"></i>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts
{
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>handleCreateTopicForm();</script>
}
